{

    "manifest_version": 2,
    "name": "Note-ify",
    "version": "2.0",

    "description": "firefox add-on that turns web text content into musical notation",

    "icons": {
        "48": "images/icon.png"
    },

    "permissions": [
        "<all_urls>",
        "activeTab",
        "contextMenus",
        "webNavigation"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "web_accessible_resources": [
        "OpusStd.otf",
        "images/5-line-staff.png",
        "images/notehead-36pt.png",
        "images/halfnote-36pt.png"
    ]

}